<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xle.mapper.BookMapper">

    <select id="selectByCondition" parameterType="String" resultType="book">
        SELECT * from book_info,class_info WHERE book_info.class_id=class_info.class_id
        <if test="value != null and value.length > 0">
            and (ISBN like '%${value}%' or name like '%${value}%')
        </if>
    </select>

</mapper>